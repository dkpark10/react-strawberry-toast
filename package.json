{
  "name": "react-strawberry-toast",
  "description": "simple headless free position react toast library",
  "version": "0.2.0",
  "author": "dkpark10",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkpark10/react-strawberry-toast.git"
  },
  "bugs": {
    "url": "https://github.com/dkpark10/react-strawberry-toast/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./dist/headless": {
      "require": {
        "types": "./dist/use-strawberry-toast.d.ts",
        "default": "./dist/use-strawberry-toast.js"
      },
      "import": {
        "types": "./dist/use-strawberry-toast.d.mts",
        "default": "./dist/use-strawberry-toast.mjs"
      }
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run --filter=react-strawberry-toast-react-example dev",
    "dev:docs": "pnpm run --filter=react-strawberry-toast-docs dev",
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-preserve-directives": "^1.1.3",
    "sass": "^1.83.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
