{
  "name": "react-strawberry-toast",
  "description": "A simple and customizable React toast library",
  "version": "1.3.0",
  "author": "dkpark10",
  "license": "MIT",
  "keywords": [
    "react",
    "toast",
    "snackbar",
    "modal",
    "alert",
    "notification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkpark10/react-strawberry-toast.git"
  },
  "bugs": {
    "url": "https://github.com/dkpark10/react-strawberry-toast/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./dist/headless": {
      "require": {
        "types": "./dist/headless.d.ts",
        "default": "./dist/headless.js"
      },
      "import": {
        "types": "./dist/headless.d.mts",
        "default": "./dist/headless.mjs"
      }
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "pnpm run --filter=react-strawberry-toast-playground dev",
    "dev:docs": "pnpm run --filter=react-strawberry-toast-docs dev",
    "deploy:docs": "pnpm run --filter=react-strawberry-toast-docs deploy",
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky install",
    "deploy": "pnpm run test --run && pnpm run build && npm publish --access=public"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "husky": "^8",
    "jsdom": "^24.0.0",
    "react": "^18",
    "react-dom": "^18",
    "rollup-preserve-directives": "^1.1.3",
    "sass": "^1.83.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
