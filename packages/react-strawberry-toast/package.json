{
  "name": "react-strawberry-toast",
  "description": "A simple and customizable React toast library",
  "version": "2.2.0",
  "author": "dkpark10",
  "license": "MIT",
  "keywords": [
    "react",
    "toast",
    "snackbar",
    "modal",
    "alert",
    "notification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkpark10/react-strawberry-toast.git",
    "directory": "packages/react-strawberry-toast"
  },
  "bugs": {
    "url": "https://github.com/dkpark10/react-strawberry-toast/issues"
  },
  "homepage": "https://dkpark10.github.io/react-strawberry-toast/",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./dist/headless": {
      "require": {
        "types": "./dist/headless.d.ts",
        "default": "./dist/headless.js"
      },
      "import": {
        "types": "./dist/headless.d.mts",
        "default": "./dist/headless.mjs"
      }
    },
    "./dist/style.css": "./dist/style.css",
    "./dist/style2.css": "./dist/style2.css",
    "./dist/style3.css": "./dist/style3.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:update": "npx playwright test --update-snapshots",
    "prepare": "cp ../../README.md ./README.md",
    "deploy": "pnpm run prepare && pnpm run test --run && pnpm run test:e2e && pnpm run build && npm publish --access=public"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "jsdom": "^24.0.0",
    "playwright": "^1.50.1",
    "react": "^18",
    "react-dom": "^18",
    "rollup-preserve-directives": "^1.1.3",
    "sass": "^1.83.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
